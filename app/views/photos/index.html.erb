<div class="page-header">
<h1> My Photos </h1>
</div>

<p><a href="/photos/new" class="btn btn-primary">Add a new photo!</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th> Image </th>
      <th> Caption </th>
      <th> Options</th>
    </tr>
  </thead>

  <tbody>
    <%= @list_of_photos.each do |photo| %>
    <tr>
      <td> <img src="<%= photo.source %>" width="300"></td>
      <td><%= photo.caption %></td>
      <td>
        <a href="/photos/<%= photo.id %>" class= "btn btn-primary"> Photo Details </a>
      </td>
      <td> <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger"> Delete Photo <i class= fa fa-trash-o> </i>
      </a>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>
